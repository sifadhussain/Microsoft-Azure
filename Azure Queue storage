using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using Microsoft.WindowsAzure.Storage;
using Microsoft.WindowsAzure.Storage.Auth;
using Microsoft.WindowsAzure.Storage.Queue;
namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {

            String accountname = "fileserverp";
            String accountkey = "ZUHtcEx6boQtVj8TfYr83F9MkXsS23Yi9lgKmFnYrPdjGxadts45RkJPZLb0IzikrPlxEeJIwjz+PUrkN1KDbw==";
            String msg = "";
            try
            {
                StorageCredentials creds = new StorageCredentials(accountname, accountkey);
                CloudStorageAccount account = new CloudStorageAccount(creds, useHttps: true);
                CloudQueueClient queueClient = account.CreateCloudQueueClient();
                CloudQueue queue = queueClient.GetQueueReference("sifadquee");
                queue.CreateIfNotExists();
                while (true)
                {
                    Console.WriteLine("Enter a Message");
                    msg = Console.ReadLine();
                    CloudQueueMessage message = new CloudQueueMessage(msg);
                    queue.AddMessage(message);
                    Console.WriteLine("New Message Y/N?");
                    msg = Console.ReadLine();
                    if (msg == "N") ;
                    {
                        break;
                    }
                }   
            }
            catch(Exception ex)
            {
                Console.WriteLine(ex.Message);
              }
        }
    }
}
